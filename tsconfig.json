{
	"compilerOptions": {
		"declaration": true,
		"rootDir": ".",
		"outDir": "./dist",
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
